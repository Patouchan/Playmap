{% extends 'layout.html.twig' %}

{% block title %}
  {{ parent() }} - Inscription
{% endblock %}

{% block content %}

  <div class="container">
    <div class="row my-3">
      <div class="col">
        <h2>Inscription</h2>
      
        {{ form_start(form) }}

          {{ form_row(form.pseudo, {'label' : 'Nom utilisateur', 'attr' : {'placeholder' : 'Nom utilisateur'} }) }}
          {{ form_row(form.email, {'label' : 'Adresse mail', 'attr' : {'placeholder' : 'Adresse mail'} }) }}
          {{ form_row(form.password, {'label' : 'Mot de passe', 'attr' : {'placeholder' : 'Mot de passe'} }) }}
          {{ form_row(form.confirm_password, {'label' : 'Confirmation mot de passe', 'attr' : {'placeholder' : 'Confirmation mot de passe'} }) }}

          <button type="submit" class="btn btn-primary">Inscription</button>
        {{ form_end(form) }}
      </div>
    </div>
  </div>

{% endblock %}